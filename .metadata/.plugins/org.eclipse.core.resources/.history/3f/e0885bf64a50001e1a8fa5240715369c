package classes.constructor;

//참조 자료형 - CC 클래스 정의
public class CC {
	String name;
	float height;
	float weight;
	
	//기본 생성자
	public CC() {}
	
	//매개변수가 있는 생성자
	public CC(String n) {
		name = n;
	}
	
	// 매개변수가 있는 생성자(모든 필드)
	public CC(String n, float h, float w) {
		name = n;
		height = h;
		weight = w;
	}
	
	//메서드
	public void showCCInfo () {
		System.out.printf("이름 : %s, " + "키 : %.1f" + "몸무게 : %.1f\n", 
				name, height, weight);
	}
}
